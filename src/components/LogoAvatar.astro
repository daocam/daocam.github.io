---
import { Icon } from "astro-icon";
---

<div>
  <Icon name="mdi:terminal" aria-hidden="true" />
  <p aria-hidden="true">Daouda Camara</p>
</div>

<style lang="scss">
  @use '../assets/scss/base/breakpoint' as *;

  div {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  [astro-icon] {
    max-width: 3.5rem;
    color: var(--neutral-100);
  }

  p {
    display: none;

    @include breakpoint(600) {
      display: block;
    }
  }
</style>
